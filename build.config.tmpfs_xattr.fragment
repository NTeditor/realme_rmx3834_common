# vim: ft=bash:
POST_DEFCONFIG_CMDS="${POST_DEFCONFIG_CMDS} && update_config_tmpfs_xattr"
function update_config_tmpfs_xattr() {
  ${KERNEL_DIR}/scripts/config --file ${OUT_DIR}/.config \
    -y CONFIG_TMPFS_XATTR

  (cd ${OUT_DIR} &&
    make O=${OUT_DIR} $archsubarch CROSS_COMPILE=${CROSS_COMPILE} "${TOOL_ARGS[@]}" ${MAKE_ARGS} olddefconfig)
}
